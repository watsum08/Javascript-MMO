{
  "name": "javascript-mmo",
  "version": "1.0.0",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev:server": "tsx watch src/server.ts",
    "dev:css": "tailwindcss -i ./src/input.css -o ./dist/style.css --watch",
    "dev": "concurrently \"yarn dev:css\" \"yarn dev:server\"",
    "start": "node dist/server.js",
    "build": "rimraf ./dist && tsc && tsc-alias && cp -r ./public/. ./dist/",
    "build:assets": "tailwindcss -o ./dist/style.css",
    "go": "yarn build && yarn start"
  },
  "dependencies": {
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.2",
    "typescript": "^5.3.3"
  }
}
